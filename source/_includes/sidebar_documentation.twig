<div id="documentation-menu" class="asideright">

    <div class="doc-nav-home">
        <a href="{{ parent.url }}">
            <i class="icon-left-open"></i> {{ parent.title }}
        </a>
    </div>

    <ul class="nav-pills">
        {% for post in posts %}
            <li{{ post.url == page.url ? '  class="active"' : '' }}>
                <a href="{{ post.url }}">{{ post.title }}</a>
            </li>
        {% endfor %}
    </ul>

</div>